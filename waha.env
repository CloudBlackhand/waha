# WAHA Configuration
WAHA_VERSION=CORE
PORT=3000

# Dashboard Configuration
WAHA_DASHBOARD_ENABLED=true
WAHA_DASHBOARD_USERNAME=admin
WAHA_DASHBOARD_PASSWORD=admin123
WAHA_DASHBOARD_URI=/dashboard

# Engine Configuration
WHATSAPP_DEFAULT_ENGINE=NOWEB

# NOWEB Store Configuration (Para testar o store)
WHATSAPP_NOWEB_STORE_ENABLED=true
WHATSAPP_NOWEB_STORE_FULL_SYNC=true

# API Configuration
WHATSAPP_API_KEY=your_api_key_here
WHATSAPP_API_KEY_HASH=your_api_key_hash_here

# Webhook Configuration (opcional)
WHATSAPP_WEBHOOK_URL=
WHATSAPP_WEBHOOK_EVENTS=message,status

# Logging
LOG_LEVEL=info

# CORS (para desenvolvimento)
CORS_ORIGIN=*

# Media Configuration
WHATSAPP_MEDIA_AUTODOWNLOAD=true
WHATSAPP_MEDIA_BASE64=false

# Session Configuration
WHATSAPP_SESSION_START_TIMEOUT=60000
WHATSAPP_SESSION_RESTART_TIMEOUT=30000

# Browser Configuration (para WEBJS)
WHATSAPP_BROWSER_HEADLESS=true
WHATSAPP_BROWSER_ARGS=--no-sandbox,--disable-setuid-sandbox

# Proxy Configuration (opcional)
# WHATSAPP_PROXY_SERVER=
# WHATSAPP_PROXY_USERNAME=
# WHATSAPP_PROXY_PASSWORD=

# Database Configuration (opcional - para store persistente)
# WHATSAPP_DATABASE_URL=
# WHATSAPP_DATABASE_TYPE=sqlite

# Redis Configuration (opcional)
# WHATSAPP_REDIS_URL=

# MinIO Configuration (opcional)
# WHATSAPP_MINIO_ENDPOINT=
# WHATSAPP_MINIO_PORT=
# WHATSAPP_MINIO_ACCESS_KEY=
# WHATSAPP_MINIO_SECRET_KEY=
# WHATSAPP_MINIO_USE_SSL=false
# WHATSAPP_MINIO_BUCKET_NAME=waha

# MongoDB Configuration (opcional)
# WHATSAPP_MONGODB_URL=

# PostgreSQL Configuration (opcional)
# WHATSAPP_POSTGRES_URL=
